{
  "family": "my-ecs-task-family",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "taskRoleArn": "arn:aws:iam::603897016348:role/ECSTaskExecutionRole",
  "executionRoleArn": "arn:aws:iam::603897016348:role/ECSTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "ecommerce-backend",
      "image": "603897016348.dkr.ecr.eu-south-2.amazonaws.com/ecommerce-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ]
    },
    {
      "name": "ecommerce-frontend",
      "image": "603897016348.dkr.ecr.eu-south-2.amazonaws.com/ecommerce-frontend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3001,  
          "protocol": "tcp"
        }
      ]
    },
    {
      "name": "ecommerce-nginx",
      "image": "603897016348.dkr.ecr.eu-south-2.amazonaws.com/ecommerce-nginx:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp",
          "hostPort": 80
        }
      ]
    },
    {
      "name": "redis",
      "image": "redis:7.4-alpine",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 6379,
          "protocol": "tcp"
        }
      ]
    }
  ]
}