// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Server",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/dist/index.js", // Adjust to your output directory and main file
        "preLaunchTask": "tsc: build", // Ensure your TypeScript is compiled before launching
        "outFiles": ["${workspaceFolder}/dist/**/*.js"], // Adjust to your output directory
        "sourceMaps": true
      }
    ]
  }
  